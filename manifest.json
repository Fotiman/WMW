{
  "name": "WebmasterWorld Favorite Forums",
  "version": "1.1.0",
  "description": "Copy links to your favorite WebmasterWorld forums to a section at the top of the Forum Index page.",
  "icons": {
    "16": "favicon.ico",
    "48": "favicon48.png",
    "128": "favicon128.png"
  },
  "background_page": "background.html",
  "content_scripts": [
    {
      "matches": ["https://*.webmasterworld.com/home.htm*","https://*.webmasterworld.com/indexv5.cgi*"],
      "run_at": "document_end",
      "js": ["jquery.js", "contentscript.js"]
    }
  ],
  "page_action": {
    "default_icon": "favicon.ico",
    "default_title": "WebmasterWorld",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "https://*.webmasterworld.com/*"
  ]
}